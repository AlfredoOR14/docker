pipeline {
    agent any

    environment {
        DOCKERFILE_PATH = '.'
        IMAGE_NAME = 'demo'
        WORKSPACE_PATH = 'C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\docker'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH}\\Dockerfile ."
            }
        }
        stage('Extract JAR from Image') {
            steps {
                script {
                    // Crear un contenedor temporal a partir de la imagen construida sin iniciarlo
                    def tempContainerId = bat(script: "docker create ${IMAGE_NAME}", returnStatus: true).trim()
                    // Copiar el archivo JAR desde el contenedor a la ruta espec√≠fica en el workspace
                    bat "docker cp ${tempContainerId}:/opt/app/*.jar ${WORKSPACE_PATH}"
                    // Eliminar el contenedor temporal
                    bat "docker rm ${tempContainerId}"
                }
            }
        }
    }
}