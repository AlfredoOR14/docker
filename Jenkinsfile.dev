pipeline {
    agent any

    environment {
        DOCKERFILE_PATH = '.'
        IMAGE_NAME = 'demo'
        WORKSPACE_PATH = 'C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\docker'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Construir la imagen Docker usando el Dockerfile en el directorio especificado
                    docker.build(IMAGE_NAME, "-f ${DOCKERFILE_PATH} .")
                }
            }
        }
        stage('Extract JAR from Image') {
            steps {
                script {
                    // Crear un contenedor temporal a partir de la imagen construida sin iniciarlo
                    def tempContainer = docker.createContainer(IMAGE_NAME)
                    // Copiar el archivo JAR desde el contenedor a la ruta espec√≠fica en el workspace
                    docker.cp(tempContainer.id, "/opt/app/*.jar", WORKSPACE_PATH)
                    // Eliminar el contenedor temporal
                    docker.remove(tempContainer.id)
                }
            }
        }
    }
}
